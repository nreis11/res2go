<div id="login-form">
  <% if @errors %>
  <%=   @errors.each { |error| error } %>
  <% end %>

  <form action="/sessions" method="POST">
    <input type="text" name="email" placeholder="Email:">
    <input type="password" name="password" placeholder="Password:">
    <input type="submit" value="Login">
  </form>
</div>
